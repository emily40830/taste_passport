<div class="container mt-5 my-auto h-100">
  <div class="row mb-5">
    <h1 class="mb-1 main-title">新增餐廳</h1>
  </div>
  {{> create_mes}}
  <form action="/restaurants" method="POST" onsubmit="return editCheckAgain()">

    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">餐廳名稱</label>
      <div class="col-sm-10">
        <input required class="form-control input-area" type="text" name="name" id="name">
      </div>
    </div>

    <div class="form-group row">
      <label for="name_en" class="col-sm-2 col-form-label">餐廳英文名稱</label>
      <div class="col-sm-10">
        <input required class="form-control input-area" type="text" name="name_en" id="name_en">
      </div>
    </div>

    <div class="form-group row">
      <label for="category" class="col-sm-2 col-form-label">類別</label>
      <div class="col-sm-10">
        <input required type="text" name="category" class="form-control input-area">
      </div>
    </div>

    <div class="form-group row">
      <label for="image" class="col-sm-2 col-form-label">圖片URL</label>
      <div class="col-sm-10">
        <input required type="text" name="image" class="form-control input-area">
      </div>
    </div>

    <div class="form-group row">
      <label for="location" class="col-sm-2 col-form-label">餐廳地址</label>
      <div class="col-sm-10">
        <input required type="text" name="location" class="form-control input-area">
      </div>
    </div>

    <div class="form-group row">
      <label for="phone" class="col-sm-2 col-form-label">訂位專線</label>
      <div class="col-sm-10">
        <input required type="text" name="phone" class="form-control input-area">
      </div>
    </div>

    <div class="form-group row">
      <label for="google_map" class="col-sm-2 col-form-label">Google Map</label>
      <div class="col-sm-10">
        <input required type="text" name="google_map" class="form-control input-area">
      </div>
    </div>

    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">評分</label>
      <div class="col-sm-10">
        <input required type="number" name="rating" class="form-control input-area" min="0" ,max="5">
      </div>
    </div>

    <div class="form-group row">
      <label for="description" class="col-sm-2 col-form-label">介紹</label>
      <div class="col-sm-10">
        <textarea required type="text" name="description" class="form-control input-area"></textarea>
      </div>
    </div>
    <div class="form-group row">
      <button type="submit" class="ml-auto mr-auto btn btn-warning mt-3 mb-5">Create</button>
    </div>
  </form>
</div>