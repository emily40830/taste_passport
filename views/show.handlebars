<div class="container show-block wrapper">
  <div class="row">
    <!-- <form action="/restaurants/{{this._id}}/favorite/?_method=PUT" method="post"
      style="display: {{#if restaurant.isFavorite}}inline{{else}}none{{/if}};"
      onsubmit="return deletefromfavoriteOrnot()">
      <button type="submit" class="favorite fas fa-heart fa-lg" style="border: none;"></button>
    </form> -->
    <h1 class="mb-1 main-title">{{ restaurant.name}}

    </h1>


  </div>
  <div class="row">
    <div class="col-5 col-md-5 mx-auto">
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name}}"
        style="max-width: 600px;">
    </div>
    <div class="col-7 col-md-7 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{ restaurant.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ restaurant.location }}
        <a href="{{ restaurant.google_map }}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-5 mt-4">
        {{ restaurant.description }}
      </p>

      <div class="editor mb-5 mt-4">

        <a href="/restaurants/{{restaurant._id}}/edit" role="button" class="btn btn-warning">
          <i class="fas fa-edit fa-xs"></i> Edit
        </a>

        <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="post" style="display: inline;"
          onsubmit="return submitOrnot()">
          <button type="submit" style="border: none;" class="delete btn btn-danger">
            <i class="fas fa-trash fa-xs"></i> delete
          </button>
        </form>
      </div>
    </div>
  </div>
</div>