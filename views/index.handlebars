<!-- restaurant list -->
<section class="content">
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="card-columns">

          {{#each restaurants}}
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <div class="d-flex" id="card-footer">
                  <div class="d-flex">
                    <span class="badge badge-pill badge-danger font-weight-normal mr-auto">
                      {{this.rating}}
                      <i class="fas fa-star fa-xs"></i>
                    </span>
                  </div>
                  <div class="ml-auto" id="card-editor">

                    <!-- <span class="badge badge-pill font-weight-normal">
                      <a href="./restaurants/{{this._id}}/favorite" role="button" class="btn btn-danger"
                        data-toggle="button">
                        <i class="fas fa-heart fa-xs"></i>
                      </a>
                    </span> -->

                    <form action="./restaurants/{{this._id}}/favorite?_method=PUT" method="post"
                      style="display: inline;">

                      {{!-- 
                      <div class="btn-group-toggle" data-toggle="buttons">
                        <label class="btn fas fa-heart fa-ml">
                          <input type="checkbox">
                        </label>
                      </div> --}}

                      <button type="submit" class="fas fa-heart fa-ml {{#if this.isFavorite }}favorite{{/if}}"
                        style="border: none;"></button>
                    </form>

                    <!--<span class="badge badge-pill font-weight-normal"> -->
                    <a href="./restaurants/{{this._id}}/edit">
                      <i class="fas fa-edit fa-ml"></i>
                    </a>


                    <form action="./restaurants/{{this._id}}?_method=DELETE" method="post" style="display: inline;"
                      onsubmit="return deleteOrnot()">
                      <button type="submit" class="delete fas fa-trash fa-ml" style="border: none;"></button>
                    </form>

                  </div>
                </div>

              </div>
            </div>
          </a>
          {{/each}}

        </div>
      </div>
    </div>
  </div>
</section>